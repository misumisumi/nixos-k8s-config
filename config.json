{
    "workspaces": [
        "development",
        "staging",
        "production"
    ],
    "lxd-setting": {
        "storage-backend": "btrfs",
        "storage-create-loop": "64"
    },
    "virtualIPs": {
        "k8s": {
            "development": "10.150.10.100",
            "production": "192.168.1.100"
        }
    },
    "drbdDevices": {
        "volume 0": {
            "nfs1": "/dev/sdb",
            "nfs2": "/dev/sdb"
        }
    },
    "hosts": {
        "yui": {
            "cpu_bender": "intel",
            "ip_address": "192.168.1.100",
            "label": "ctrl"
        },
        "alice": {
            "cpu_bender": "intel",
            "ip_address": "192.168.1.101",
            "label": "worker1"
        },
        "strea": {
            "cpu_bender": "intel",
            "ip_address": "192.168.1.102",
            "label": "worker2"
        },
        "netboot": {
            "cpu_bender": "intel",
            "ip_address": "192.168.1.101",
            "label": "netboot"
        }
    }
}
